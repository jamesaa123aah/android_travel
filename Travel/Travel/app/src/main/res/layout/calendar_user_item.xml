<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/calendar_user_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/calendar_user_img1"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_margin="20dp" />

        <TextView
            android:id="@+id/calendar_user_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/calendar_user_img1"
            android:layout_toRightOf="@+id/calendar_user_img1" />

        <TextView
            android:id="@+id/calendar_user_Content1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/calendar_user_text1"
            android:layout_below="@+id/calendar_user_text1" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/calendar_user_img2"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_margin="20dp" />

        <TextView
            android:id="@+id/calendar_user_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/calendar_user_img2"
            android:layout_toRightOf="@+id/calendar_user_img2" />

        <TextView
            android:id="@+id/calendar_user_Content2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/calendar_user_text2"
            android:layout_alignLeft="@+id/calendar_user_text2"/>
    </RelativeLayout>
</LinearLayout>
