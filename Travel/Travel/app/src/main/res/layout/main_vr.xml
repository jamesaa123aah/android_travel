<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.buu.app.travel.MyView.TitleLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"></com.buu.app.travel.MyView.TitleLayout>

    <TextView
        android:id="@+id/main_vr_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.baidu.mapapi.map.MapView
            android:id="@+id/main_vr_mapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"></com.baidu.mapapi.map.MapView>

            />
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/mark_layout"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="-240dp"
        android:background="#cc4e5a6b"

        android:visibility="gone">

        <ImageView
            android:id="@+id/mark_img"
            android:layout_width="fill_parent"
            android:layout_height="120dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/img_border"
            android:scaleType="fitXY"
            android:src="@drawable/dongjing1" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:clickable="true"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="70dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/mark_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="jjajjajjaj"
                    android:textColor="#fff5eb"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/mark_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="jjajjajjaj"
                    android:textColor="#fff5eb"
                    android:textSize="15dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/mark_zan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:text="jjajjajjaj"
                    android:textColor="#fff5eb"
                    android:textSize="15dp" />

                <ImageView
                    android:id="@+id/mark_imgzan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/main_mine_true" />

            </LinearLayout>
        </RelativeLayout>


    </RelativeLayout>



</LinearLayout>
