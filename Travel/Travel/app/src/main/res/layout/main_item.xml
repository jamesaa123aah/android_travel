<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="10dp"

        >

        <ImageView
            android:id="@+id/main_item_img"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/dongjing1"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/main_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hihi"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            style="@style/theme_textmaking_style"
            />

        <ImageView
            android:id="@+id/main_item_imgOff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/user"
                android:layout_gravity="center"
                />

            <TextView
                android:id="@+id/main_item_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="110"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/love"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/main_item_zan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="113"
                android:layout_margin="10dp"
                android:layout_gravity="center_vertical"
                />

        </LinearLayout>
    </RelativeLayout>




</LinearLayout>
