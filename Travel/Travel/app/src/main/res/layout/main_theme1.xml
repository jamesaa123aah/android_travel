<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_green"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.buu.app.travel.MyView.TitleLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"></com.buu.app.travel.MyView.TitleLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/holo_orange_dark"/>

            <ImageView
                android:id="@+id/main_theme1_img"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/translate_img1"
                android:src="@drawable/main_mei4"
                android:scaleType="fitXY"
                android:padding="5dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/main_theme1_theme"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="@string/theme1_theme"
                    style="@style/theme_text_style"
                    />
                <Spinner
                    android:id="@+id/main_theme1_spinner1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"></Spinner>


                <TextView
                    android:id="@+id/main_theme1_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="@string/theme1_time"
                    style="@style/theme_text_style"
                    />

                <Spinner
                    android:id="@+id/main_theme1_spinner2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"></Spinner>


                <TextView
                    android:id="@+id/main_theme1_relax"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="@string/theme1_relax"
                    style="@style/theme_text_style"
                    />

                <Spinner
                    android:id="@+id/main_theme1_spinner3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"></Spinner>
            </LinearLayout>


            <TextView
                android:id="@+id/main_theme_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/theme1_date"
                android:layout_marginTop="20dp"
                style="@style/theme_text_style"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/main_theme1_spinner4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"></Spinner>

                <Spinner
                    android:id="@+id/main_theme1_spinner5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"></Spinner>

                <Spinner
                    android:id="@+id/main_theme1_spinner6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"></Spinner>
            </LinearLayout>
            <Button
                android:id="@+id/main_theme1_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:text="@string/theme1_btn"
                android:background="@drawable/theme_btnstate_style"

                />


        </LinearLayout>
    </ScrollView>

</LinearLayout>