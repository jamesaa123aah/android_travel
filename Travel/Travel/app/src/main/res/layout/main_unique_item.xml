<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/unique_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/main_mei1"
        android:scaleType="fitXY"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        />

    <TextView
        android:id="@+id/unique_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="天坛"
        android:textSize="18dp"
        android:textColor="#000000"
        android:layout_alignTop="@+id/unique_img"
        android:layout_toRightOf="@+id/unique_img"
        android:layout_toEndOf="@+id/unique_img" />

    <TextView
        android:id="@+id/unique_introduce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/unique_img"
        android:layout_below="@id/unique_title"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="50dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_toRightOf="@+id/unique_img"
        android:layout_marginLeft="10dp"
        android:layout_alignBottom="@+id/unique_img"
        android:gravity="center"
        >

        <ImageView
            android:id="@+id/unique_img_look"
            android:layout_width="0dp"
            android:layout_height="15dp"
            android:layout_weight="1"
            android:src="@drawable/user"
            />
        <TextView
            android:id="@+id/unique_look_text"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/unique_img_praise"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="15dp"
            android:src="@drawable/love"
            />
        <TextView
            android:id="@+id/unique_praise_text"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/unique_img_comment"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="15dp"
            android:src="@drawable/main_main_true"
            />
        <TextView
            android:id="@+id/unique_comment_text"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/choice_gray"/>
</RelativeLayout>
