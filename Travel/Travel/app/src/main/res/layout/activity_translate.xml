<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="20dp"
    android:background="@drawable/translate"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Spinner
            android:id="@+id/translate_spinner_from"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:background="@drawable/choice_button_style"
            android:entries="@array/translate_nate"/>
        <ImageView
            android:src="@drawable/translation"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"/>
        <Spinner
            android:id="@+id/translate_spinner_to"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:background="@drawable/choice_button_style"

            android:layout_height="wrap_content"
            android:entries="@array/translate_nate"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/translate_lin_from"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:background="@drawable/style_theme_border"
        android:padding="5dp"
        android:focusable="true"
        >

        <EditText
            android:id="@+id/translate_etext_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textSize="16sp"
            android:focusable="true"
            android:inputType="textMultiLine"
            android:minLines="8"
            />
    </LinearLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/translate_bt_photo"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:background="@drawable/thememaking_border"
            android:text="@string/photo_translate"/>
        <Button
            android:id="@+id/translate_bt_translation"
            android:layout_marginRight="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:background="@drawable/thememaking_border"
            android:text="@string/translate"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="12dp" />
    </RelativeLayout>
    <TextView
        android:id="@+id/translate_text_to"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@drawable/style_theme_border"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:textSize="16sp"
        android:textColor="#000000"

        />
</LinearLayout>
