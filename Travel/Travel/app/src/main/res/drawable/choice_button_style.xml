<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">\
        <shape>
            <corners
                android:radius="25dp"
                ></corners>

            <stroke
                android:color="@color/holo_purple"
                android:width="2dp"
                ></stroke>

            <solid
                android:color="@color/bg_green"
                ></solid>

        </shape>

    </item>

    <item android:state_checked="false">
        <shape>
            <corners android:radius="25dp"></corners>
            <stroke
                android:color="@color/holo_purple"
                android:width="2dp"
                ></stroke>
            <solid
                android:color="@color/choice_gray"
                ></solid>

        </shape>
    </item>

</selector>